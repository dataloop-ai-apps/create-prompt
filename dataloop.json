{
  "displayName": "Prompt Item Tools",
  "name": "prompt-item-tools",
  "scope": "public",
  "version": "0.1.2",
  "description": "Service to generate prompt items out of other items",
  "attributes": {
    "Provider": "Dataloop",
    "Category": "Pipeline",
    "Pipeline Type": "Node",
    "Node Type": "Data"
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/create-prompt.git",
    "gitTag": "0.1.2"
  },
  "components": {
    "pipelineNodes": [
      {
        "invoke": {
          "type": "function",
          "namespace": "ptserv.create-prompt-module.create_prompt_from_item"
        },
        "name": "Create Prompt from Item",
        "categories": [
          "Prompt Item Tools"
        ],
        "displayName": "Create Prompt from Item",
        "description": "Create prompt item from an input item (text, image, video).",
        "scope": "node",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "Create Prompt from Item",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "prompt_text",
              "title": "Prompt  Context",
              "props": {
                "title": true,
                "type": "string",
                "default": "",
                "required": false,
                "placeholder": "Context string to be used around the input that will be turned into prompt"
              },
              "rules": [],
              "widget": "dl-input"
            },
            {
              "name": "combine_texts",
              "title": "Combine texts",
              "props": {
                "title": true,
                "type": "boolean",
                "default": true,
                "required": false,
                "options": [
                  {
                    "value": true,
                    "label": "True"
                  },
                  {
                    "value": false,
                    "label": "False"
                  }
                ]
              },
              "rules": [],
              "widget": "dl-select"
            },
            {
              "name": "prefix",
              "title": "Prefix",
              "props": {
                "title": true,
                "type": "string",
                "default": "prompt-",
                "required": false,
                "placeholder": "Prefix to the prompt item name"
              },
              "rules": [],
              "widget": "dl-input"
            },
            {
              "name": "directory",
              "title": "Directory",
              "props": {
                "title": true,
                "type": "string",
                "default": "/.dataloop/prompts",
                "required": false,
                "placeholder": "Directory where prompt item will be saved."
              },
              "rules": [],
              "widget": "dl-input"
            }
          ]
        }
      },
      {
        "invoke": {
          "type": "function",
          "namespace": "ptserv.create-prompt-module.create_prompt_from_subtitle_annotations"
        },
        "name": "Create Prompt from Subtitle",
        "categories": [
          "Prompt Item Tools"
        ],
        "displayName": "Create Prompt from Subtitle",
        "description": "Create prompt item from subtitle annotation in an item.",
        "scope": "node",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "Create Prompt from Subtitle",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "prompt_text",
              "title": "Prompt  Context",
              "props": {
                "title": true,
                "type": "string",
                "default": "",
                "required": false,
                "placeholder": "Context string to be used around the input that will be turned into prompt"
              },
              "rules": [],
              "widget": "dl-input"
            },
            {
              "name": "combine_texts",
              "title": "Combine texts",
              "props": {
                "title": true,
                "type": "boolean",
                "default": true,
                "required": false,
                "options": [
                  {
                    "value": true,
                    "label": "True"
                  },
                  {
                    "value": false,
                    "label": "False"
                  }
                ]
              },
              "rules": [],
              "widget": "dl-select"
            },
            {
              "name": "prefix",
              "title": "Prefix",
              "props": {
                "title": true,
                "type": "string",
                "default": "prompt-",
                "required": false,
                "placeholder": "Prefix to the prompt item name"
              },
              "rules": [],
              "widget": "dl-input"
            },
            {
              "name": "directory",
              "title": "Directory",
              "props": {
                "title": true,
                "type": "string",
                "default": "/.dataloop/prompts",
                "required": false,
                "placeholder": "Directory where prompt item will be saved."
              },
              "rules": [],
              "widget": "dl-input"
            }
          ]
        }
      },
      {
        "invoke": {
          "type": "function",
          "namespace": "ptserv.create-prompt-module.create_prompt_from_text_annotations"
        },
        "name": "Create Prompt from Text Annotations",
        "categories": [
          "Prompt Item Tools"
        ],
        "displayName": "Create Prompt from Text Annotations",
        "description": "Create prompt item from text annotations in input item.",
        "scope": "node",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "Create Prompt from Text Annotations",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "prompt_text",
              "title": "Prompt  Context",
              "props": {
                "title": true,
                "type": "string",
                "default": "",
                "required": false,
                "placeholder": "Context string to be used around the input that will be turned into prompt"
              },
              "rules": [],
              "widget": "dl-input"
            },
            {
              "name": "combine_texts",
              "title": "Combine texts",
              "props": {
                "title": true,
                "type": "boolean",
                "default": true,
                "required": false,
                "options": [
                  {
                    "value": true,
                    "label": "True"
                  },
                  {
                    "value": false,
                    "label": "False"
                  }
                ]
              },
              "rules": [],
              "widget": "dl-select"
            },
            {
              "name": "prefix",
              "title": "Prefix",
              "props": {
                "title": true,
                "type": "string",
                "default": "prompt-",
                "required": false,
                "placeholder": "Prefix to the prompt item name"
              },
              "rules": [],
              "widget": "dl-input"
            },
            {
              "name": "directory",
              "title": "Directory",
              "props": {
                "title": true,
                "type": "string",
                "default": "/.dataloop/prompts",
                "required": false,
                "placeholder": "Directory where prompt item will be saved."
              },
              "rules": [],
              "widget": "dl-input"
            }
          ]
        }
      }
    ],
    "modules": [
      {
        "name": "create-prompt-module",
        "entryPoint": "create_prompt.py",
        "className": "ServiceRunner",
        "initInputs": [],
        "functions": [
          {
            "name": "create_prompt_from_item",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item",
                "name": "prompt_item"
              }
            ],
            "displayName": "Create Prompt from Item",
            "displayIcon": "icon-dl-conversation"
          },
          {
            "name": "create_prompt_from_subtitle_annotations",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item",
                "name": "prompt_item"
              }
            ],
            "displayName": "Create Prompt from Subtitle",
            "displayIcon": "icon-dl-conversation"
          },
          {
            "name": "create_prompt_from_text_annotations",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item",
                "name": "prompt_item"
              }
            ],
            "displayName": "Create Prompt from Text Annotation",
            "displayIcon": "icon-dl-conversation"
          }
        ]
      }
    ],
    "services": [
      {
        "name": "ptserv",
        "moduleName": "create-prompt-module",
        "secrets": [
        ],
        "runtime": {
          "podType": "regular-xs",
          "concurrency": 10,
          "autoscaler": {
            "minReplicas": 0,
            "maxReplicas": 2,
            "queueLength": 10
          }
        },
        "operation": "none"
      }
    ]
  }
}