{
  "displayName": "Prompt Item Tools",
  "name": "prompt-item-tools-app",
  "scope": "public",
  "version": "0.1.4",
  "description": "Pipeline tools to help in creating and manipulating prompt items.",
  "attributes": {
    "Provider": "Dataloop",
    "Category": "Application",
    "Application Type": [
      "Pipeline Node"
    ]
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/create-prompt.git",
    "gitTag": "0.1.4"
  },
  "components": {
    "pipelineNodes": [
      {
        "invoke": {
          "type": "function",
          "namespace": "ptserv.create-prompt-module.create_prompt_from_item"
        },
        "name": "Create Prompt from Item",
        "categories": [
          "Prompt Item Tools"
        ],
        "displayName": "Create Prompt from Item",
        "description": "Create prompt item from an input item (text, image, video).",
        "scope": "node",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "Create Prompt from Item",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "prompt_text",
              "title": "Prompt  Context",
              "props": {
                "title": true,
                "type": "string",
                "default": "",
                "required": false,
                "placeholder": "Context string to be used around the input that will be turned into prompt"
              },
              "rules": [],
              "widget": "dl-input"
            },
            {
              "name": "combine_texts",
              "title": "Combine texts",
              "props": {
                "title": true,
                "type": "boolean",
                "default": true,
                "required": false,
                "options": [
                  {
                    "value": true,
                    "label": "True"
                  },
                  {
                    "value": false,
                    "label": "False"
                  }
                ]
              },
              "rules": [],
              "widget": "dl-select"
            },
            {
              "name": "prefix",
              "title": "Prefix",
              "props": {
                "title": true,
                "type": "string",
                "default": "prompt-",
                "required": false,
                "placeholder": "Prefix to the prompt item name"
              },
              "rules": [],
              "widget": "dl-input"
            },
            {
              "name": "directory",
              "title": "Directory",
              "props": {
                "title": true,
                "type": "string",
                "default": "/.dataloop/prompts",
                "required": false,
                "placeholder": "Directory where prompt item will be saved."
              },
              "rules": [],
              "widget": "dl-input"
            }
          ]
        }
      },
      {
        "invoke": {
          "type": "function",
          "namespace": "ptserv.create-prompt-module.create_prompt_from_item_annotations"
        },
        "name": "Create Prompt from Item Annotations",
