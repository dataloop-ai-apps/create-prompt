            },
            {
              "name": "annotation_type",
              "title": "Annotation Type",
              "props": {
                "title": true,
                "type": "string",
                "default": "text",
                "required": true,
                "options": [
                  {
                    "value": "text",
                    "label": "Text"
                  },
                  {
                    "value": "subtitle",
                    "label": "Subtitle"
                  }
                ]
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-select"
            },
            {
