              "rules": [],
              "widget": "dl-select"
            },
            {
              "name": "prefix",
              "title": "Prefix",
              "props": {
                "title": true,
                "type": "string",
                "default": "prompt-",
                "required": false,
                "placeholder": "Prefix to the prompt item name"
              },
              "rules": [],
              "widget": "dl-input"
            },
            {
              "name": "directory",
